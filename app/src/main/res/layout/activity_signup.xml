<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E53935">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="EasyMenu!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSignUpName"
        android:layout_alignStart="@+id/etSignUpName"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="29dp"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etSignUpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/etSignUpName"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSignUpName"
        android:layout_alignRight="@+id/etSignUpName"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/etSignUpEmail"
        android:layout_marginTop="15dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/etSignUpPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSignUpEmail"
        android:layout_alignRight="@+id/etSignUpEmail"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignUpSubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSignUpPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#e91a1a"
        android:textSize="20sp"
        android:elevation="30dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF" />
</RelativeLayout>